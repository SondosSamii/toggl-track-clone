<p style="color: green"><%= notice %></p>

<%= render @project %>

<div class="mb-4">
  <%= link_to "+ New task", new_task_path, class: "secondary-btn" %>
</div>

<div>
  <%= link_to "Edit this project", edit_project_path(@project), class: "secondary-btn" %>

  <%= link_to "Back to projects", projects_path, class: "main-btn" %>

  <% if @tasks.any? %>
    <% @tasks.each do |task| %>
    <div class="mt-4">
      <%= render task %>
      <p>
        <%= link_to "Show this task", task, class: "main-btn" %>
      </p>
    </div>
    <% end %>
  <% else %>
    <p class="mt-4">No tasks found for this project.</p>
  <% end %>

  <div class="my-4">
    <%= button_to "Destroy this project", @project, method: :delete, class: "btn main-btn" %>
  </div>

</div>
