<div class="container">
  <%= render @project %>

  <div class="mb-4">
    <%= link_to "+ New task", new_task_path, class: "secondary-btn" %>
  </div>

  <div>
    <%= link_to "Back to projects", projects_path, class: "main-btn" %>

    <% if @tasks.any? %>
      <% @tasks.each do |task| %>
      <div class="mt-4">
        <%= render task %>
        <div class="row-btns">
          <%= link_to "Show this task", task, class: "main-btn" %>
          <%= link_to "Edit this task", edit_task_path(task), class: "secondary-btn me-2" %>
          <%= button_to "Destroy this task", task, method: :delete, class: "secondary-btn" %>
        </div>
        <hr/>
      </div>
      <% end %>
    <% else %>
      <p class="mt-4">No tasks found for this project.</p>
    <% end %>

  </div>
</div>
