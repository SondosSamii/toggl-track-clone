<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
      <a id="task-<%= task.id %>-timer" data-timer-state="not_started" class="toggle-timer">
        StartTimer
        <label class="minutes" id="task-<%= task.id %>-minutes">00</label>:
        <label class="seconds" id="task-<%= task.id %>-seconds">00</label>
      </a>
    </p>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>
