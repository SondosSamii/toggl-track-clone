<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
      <a onclick="startTimer(this)">
        Start Timer
        <label class="minutes task-<%= task.id %>">00</label>:<label class="seconds">00</label>
      </a>
    </p>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>
